@model Solforb_TestTask.Models.OrdersViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>Каталог заказов</h2>
 
<p>
    @Html.ActionLink("Добавить заказ", "Create")
</p>
 
<form method="post">
    <div class="form-inline">
        <label class="control-label">Start Date: </label>
        @Html.EditorFor(model => model.StartDate, 
            new { 
                htmlAttributes = new { @class = "form-control", type="date" } 
            })

        <label class="control-label">End Date: </label>
        @Html.EditorFor(model => model.EndDate, 
            new { 
                htmlAttributes = new { @class = "form-control", type="date" } 
            })
    </div>
    <div class="form-inline">
        <label class="control-label">Order Number: </label>
        @Html.DropDownList("NumberOrder", Model.NumberOrder as SelectList,
                    htmlAttributes: new { @class = "form-control" })
 
        <label class="control-label">Order Date: </label>
        @Html.DropDownList("DateOrder", Model.DateOrder as SelectList,
                htmlAttributes: new { @class = "form-control" })
        
        <label class="control-label">Order Provider ID: </label>
        @Html.DropDownList("ProviderIdOrder", Model.ProviderIdOrder as SelectList,
                htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-inline">
        <label class="control-label">OrderItem Name: </label>
        @Html.DropDownList("NameOrderItem", Model.NameOrderItem as SelectList,
                    htmlAttributes: new { @class = "form-control" })
 
        <label class="control-label">OrderItem Unit: </label>
        @Html.DropDownList("UnitOrderItem", Model.UnitOrderItem as SelectList,
                htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-inline">
        <label class="control-label">Provider Name: </label>
        @Html.DropDownList("team", Model.NameProvider as SelectList,
                    htmlAttributes: new { @class = "form-control" })

        
    </div>
    <button type="submit"class="btn btn-default">Фильтр</button>
    
</form>
 
<table>
    <tr>
        <th>Id</th>
        <th>Number</th>
        <th>Date</th>
        <th>ProviderId</th>
        <th></th>
    </tr>
 
    @foreach (var item in Model.Orders)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderId)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
